pkgname=smaug-desktop
pkgver=0.1.0
pkgrel=1
pkgdesc="A tool to manage your DragonRuby Game Toolkit projects"
arch=('x86_64')
url="https://smaug.dev/"
license=('custom')
depends=('cairo' 'desktop-file-utils' 'gdk-pixbuf2' 'glib2' 'gtk3' 'hicolor-icon-theme' 'openssl' 'pango' 'webkit2gtk' 'zlib')
options=('!strip' '!emptydirs')
install=${pkgname}.install
source_x86_64=("https://github.com/ereborstudios/smaug-desktop/releases/download/${pkgver}/${pkgname}_${pkgver}_amd64.deb")
sha512sums_x86_64=('f98e39d1aaa1d7ea4e8e4e43fc105f1b78c6c394448a6ad7ce903bc2772cbee925340e8929b8aea47d0f396f10e8e611fa21188ec4464263b344ce4e897a2025')

package() {

	# Extract package data
	tar xzf data.tar.gz -C "${pkgdir}"

}
